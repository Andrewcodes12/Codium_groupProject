extends layout.pug


block content
  h3= story.title
  div(class='py-4')
    p Are you sure you want to delete this story?
  div
    form(action=`/stories/delete/${story.id}` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      button(class='btn btn-danger' type='submit') Delete story
      a(class='btn btn-warning ml-2' href='/' role='button') Cancel
