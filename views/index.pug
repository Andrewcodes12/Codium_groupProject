extends layout.pug
block content
  h3= title
  
  a(class="btn-add-story" href='/stories/new' role='button') Add story
  div(class='stories')
    each story in stories
        div(class='title')
          a(class="btn-add-story" href=`/stories/${story.id}` role='button')
            h2= story.title
        div(class='subtitle')
            h3= story.subtitle
        div(class='topic')
            h4= story.Topic.name
            h5= story.User.firstName
            h5= story.User.lastName
            h5= story.createdAt.toDateString()
        div(class='body')
            p= story.body
