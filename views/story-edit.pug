extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/stories/edit/${story.id}` method='post')
        include story-form-field.pug
        select(name="topic" required)
            label(for="topic") Topic
                each topic in topics
                    option(value=topic.id)= topic.name
        div(class='editor')
            button(type-'submit' class='editor button') Update Story
            a(href=`/stories/edit/${story.id}` class='redirect') cancel
